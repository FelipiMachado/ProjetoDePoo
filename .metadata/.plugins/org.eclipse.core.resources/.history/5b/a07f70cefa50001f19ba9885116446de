//Usuário Comum: Esse usuário pode alterar seus dados pessoais;
//Pode alterar elementos visuais em seu perfil (como descrição);
//Pode visualizar seus amigos ou perfis favoritos; Pode visitar outra
//sala com a permissão do administrador dela; Pode alterar
//informações de perfil (tipo visto por último).

package projetoPt2;

import java.util.ArrayList;

public class userNormal {
    public String nome;
    public String email;
    public String descricao;
    public ArrayList<String> amigos;
    public ArrayList<String> perfisFavoritos;
    public String vistoPorUltimo;

    /*método construtor*/
    
    public userNormal(String nome, String email) {
        this.nome = nome;
        this.email = email;
    };

    //métodos de alteração e modificação:
    
    public void alterarNome(String novoNome) {
        this.nome = novoNome;
    };

    public void alterarEmail(String novoEmail) {
        this.email = novoEmail;
    };

    public void alterarDescricao(String novaDescricao) {
        this.descricao = novaDescricao;
    };

    // Métodos para visualizar amigos e perfis favoritos
    
    public ArrayList<String> getAmigos() {
        return amigos;
    };

    public ArrayList<String> getPerfisFavoritos() {
        return perfisFavoritos;
    };

    // Método para visitar outra sala com permissão do administrador
    public boolean visitarSala(String sala, boolean permissaoAdministrador) {
        if (permissaoAdministrador) {
            System.out.println("Visitando a sala: " + sala);
            return true;
        } else {
            System.out.println("Permissão negada para visitar a sala: " + sala);
            return false;
        }
    };

    public String getNome() {
		return this.nome;
    };
    
    public void enviarMensagem(String mensagem) {
        System.out.println("Mensagem enviada: " + mensagem);
    }

    public void reagirComEmoji(String emoji) {
        System.out.println("Reagindo com emoji: " + emoji);
    }

    public void enviarAudio(String audio) {
        System.out.println("Áudio enviado: " + audio);
    }

    public void enviarVideo(String video) {
        System.out.println("Vídeo enviado: " + video);
    }

    public void enviarFoto(String foto) {
        System.out.println("Foto enviada: " + foto);
    }

    
    
    public static void main(String[] args) {
    	userNormal p1 = new userNormal("felipi", "felipi@gmail.com");
        String user = p1.getNome();
        
        System.out.println(user);
        
        p1.alterarNome("ShaolinMatadorDePorco");
        System.out.println(p1.getNome());
	}
}